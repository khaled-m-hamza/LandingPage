            box-shadow: 0 0 10px rgba(255, 255, 255, 0.3), inset 0 0 10px rgba(255, 255, 255, 0.3);
            animation: float 2s infinite;
            z-index: 1;
        }

        @@keyframes float {
            0% {
                transform: translateY(0) translateX(0);
                opacity: 0;
            }

            10% {
                opacity: 0.8;
            }

            100% {
                transform: translateY(-100vh) translateX(var(--translate-x));
                opacity: 0;
            }
        }
    </style>
</head>
